{% block sw_cms_element_fh_text_on_image_header %}
    {% set config = element.fieldConfig.elements %}
    {% set elementData = element.data %}

    <div class="cms-element-text {{ displayMode }}">
        <div class="container">
            {% block element_text_alignment %}
                <div class="cms-element-alignment{% if config.verticalAlign.value == "center" %} align-self-center{% elseif config.verticalAlign.value == "flex-end" %} align-self-end{% else %} align-self-start{% endif %}">
                    {% block element_text_inner %}
                        <div class="fh-headline category-name">
                            <h1 class="fh-text-stroke">{{ element.data.content|striptags }}</h1>
                            <div class="fh-text-shadow">{{ element.data.content|striptags }}</div>
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    </div>

{% endblock %}

