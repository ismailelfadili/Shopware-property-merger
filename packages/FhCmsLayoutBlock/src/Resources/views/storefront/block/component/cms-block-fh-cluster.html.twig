{% block block_fh_cluster %}
    {% if block %}
        <div class="col-12">
            {% block block_fh_cluster_inner %}
                <div class="{{ block.type }} fh-cluster-grid d-grid grid-g-{{ config.fhClusterGap|default(3) }}">

                    {% for element in block.slots|cluster_slot_sort %}
                        {% block block_fh_cluster_item %}
                            <div class="fh-cluster-item-{{ loop.index }}" data-cms-element-id="{{ element.id }}">
                                {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                            </div>
                        {% endblock %}
                    {% endfor %}
                </div>
            {% endblock %}
        </div>
    {% endif %}
{% endblock %}
