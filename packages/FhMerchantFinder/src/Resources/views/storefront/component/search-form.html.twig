<!-- Search Form Template -->
<p class="lead">{{ "fh-merchant-finder.finderSubline"|trans }}</p>

<div class="mt-4 pb-4">
    <form data-fh-merchant-finder="true"
          data-form-validation="true"
          action="{{ path('fh.merchant-finder.search') }}"
          method="post">

        {% block page_merchant_finder_form_inner %}
            <div class="row form-row g-0">
                <div class="form-group col-8 col-lg-3">
                    <input name="zipcode" class="fh-merchant-finder-search-field form-control" placeholder="{{ "fh-merchant-finder.zipcodeCity"|trans }}" required>
                </div>
                <div class="form-group col-4 col-lg-2">
                    <button type="submit" class="btn btn-block btn-dark merchant-finder-submit">
                        <i class="bi bi-search bi-xxs"></i>&nbsp;&nbsp;{{ "fh-merchant-finder.search"|trans }}</button>
                </div>
            </div>
        {% endblock %}
    </form>
</div>

