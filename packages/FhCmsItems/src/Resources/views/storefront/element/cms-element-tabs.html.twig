{% block sw_cms_element_tabs %}
    {% set config = element.fieldConfig.elements %}
    {% set elementData = element.data %}

    <div class="tabs-{{ element.id }}">
        <nav>
            <div class="nav nav-pills" id="pills-tab" role="tablist">
                {% for n in range(1, element.config.numberOfTabs.value) %}
                    <a class="nav-link{% if(n==1) %} active{% endif %} d-block h6 mb-0 p-3" id="nav-{{ element.id }}_{{ n }}-tab" data-toggle="tab" href="#nav-{{ element.id }}_{{ n }}" role="tab" aria-controls="nav-{{ element.id }}_{{ n }}" aria-selected="{% if(n==1) %}true{% else %}false{% endif %}">
                        {{ element.config["tabtitle#{n}"].value|raw }}
                    </a>
                {% endfor %}
            </div>
        </nav>

        <div class="tab-content p-3 p-xl-4" id="pills-tabContent">
            {% for n in range(1, element.config.numberOfTabs.value) %}
                <div class="tab-pane fade{% if(n==1) %} show active{% endif %}" id="nav-{{ element.id }}_{{ n }}" role="tabpanel" aria-labelledby="nav-{{ element.id }}_{{ n }}-tab">
                    {{ element.config["tabcontents#{n}"].value|raw }}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
